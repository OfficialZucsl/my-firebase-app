rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // PUBLIC COLLECTIONS
    match /articles/{articleId} {
      allow read: if true;
      allow write: if false;
    }
    match /offers/{offerId} {
      allow read: if true;
      allow write: if false;
    }

    // USER-OWNED COLLECTIONS
    match /transactions/{transactionId} {
      allow read, create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    match /loans/{loanId} {
      allow read, create, update: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // THIS IS THE FIX: We need BOTH rules for 'payments'

    // Rule 1: For simple queries like getDoc or onSnapshot on a single document
    match /payments/{paymentId} {
       allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Rule 2: For collection group queries across all 'payments' collections
    match /{path=**}/payments/{paymentId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
